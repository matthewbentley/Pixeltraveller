{{#is "post, page"}}
<div role='banner' class="header_pixel small fix-js">
{{else}}
<div role='banner' class="header_pixel large fix-js">
{{/is}}

	{{#if @blog.cover}}<img class="cover_pixel" src="{{@blog.cover}}" alt="{{@blog.title}}" />{{/if}}

	<h1 class="blogtitle_pixel">

		<a class="blogtitle_pixel" href="/">{{{@blog.title}}}</a>

	</h1>

	<p class="blogdescription_pixel">

		{{@blog.description}}

	</p>

        <p class="blogabout_pixel"><a class="blogabout_pixel" href="/about">About</a></p>

        <p id="cv" class="blogabout_pixel"><a class="blogabout_pixel" target="_blank" href="/cv/">Resume</a></p>
</div>
